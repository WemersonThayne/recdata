<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFF" >

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <LinearLayout
                android:id="@+id/linearLayout1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Informações do Item"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="120dp"
                android:layout_height="150dp"
                android:layout_gravity="left"
                android:layout_marginTop="30dp"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/imgview_iconReservaItem"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:layout_gravity="left"
                    android:layout_margin="10dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout2"
                android:layout_width="200dp"
                android:layout_height="150dp"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout1"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/txview_descItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/txview_idItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:textColor="#000"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/txview_descCatItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="14dp"
                    android:textColor="#000"
                    android:typeface="monospace" />

                <TextView
                    android:id="@+id/txview_idCatItem"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="#000"
                    android:typeface="monospace" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/linearLayout2"
                android:orientation="vertical" >

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF909090" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Informe os Seguintes Dados para a Reserva"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF909090" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout3"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="151dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Data Inicio:"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/editText1"
                    android:layout_width="168dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.29"
                    android:background="#0099FF"
                    android:ems="10"
                    android:inputType="date" >

                    <requestFocus
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />
                </EditText>

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Hora Inicio:"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/editText2"
                    android:layout_width="168dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:background="#0099FF"
                    android:ems="10"
                    android:inputType="date" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout4"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="122dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Data Final:"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/editText3"
                    android:layout_width="168dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="0.29"
                    android:background="#0099FF"
                    android:ems="10"
                    android:inputType="date" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="10dp"
                    android:text="Hora Termino:"
                    android:textColor="#000"
                    android:textSize="16dp"
                    android:typeface="monospace" />

                <EditText
                    android:id="@+id/editText4"
                    android:layout_width="168dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="70dp"
                    android:layout_marginTop="16dp"
                    android:background="#0099FF"
                    android:ems="10"
                    android:inputType="date" />

                <View
                    android:layout_width="wrap_content"
                    android:layout_height="2dip"
                    android:background="#FF909090" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linearLayout6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/linearLayout5"
               
                >
                <Button
                    android:id="@+id/buttonReserva"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="38dp"
                    android:text="Confirmar" />

                <Button
                    android:id="@+id/button2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="46dp"
                    android:text="Voltar" />

              
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>